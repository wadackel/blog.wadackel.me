{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended"],
  separateMajorMinor: true,
  prConcurrentLimit: 0,
  packageRules: [
    {
      groupName: "Hono ecosystem",
      matchPackageNames: ["hono", "honox", "/^@hono//"],
    },
    {
      groupName: "Tailwind CSS",
      matchPackageNames: ["tailwindcss", "/^@tailwindcss//"],
    },
    {
      groupName: "Vitest",
      matchPackageNames: ["vitest", "/^@vitest//"],
    },
    {
      groupName: "Prettier",
      matchPackageNames: ["prettier", "/^prettier-plugin-/"],
    },
    {
      groupName: "Remark and Rehype",
      matchPackageNames: [
        "remark",
        "remark-autolink-headings",
        "remark-emoji",
        "remark-extract-frontmatter",
        "remark-frontmatter",
        "remark-gfm",
        "remark-parse",
        "remark-rehype",
        "remark-slug",
        "rehype-stringify",
        "/^remark/",
        "/^rehype/",
        "/^@fec/remark/",
      ],
    },
    {
      groupName: "Patch updates",
      matchUpdateTypes: ["patch"],
      matchPackageNames: [
        "!hono",
        "!honox",
        "!tailwindcss",
        "!vitest",
        "!prettier",
        "!remark",
        "!remark-autolink-headings",
        "!remark-emoji",
        "!remark-extract-frontmatter",
        "!remark-frontmatter",
        "!remark-gfm",
        "!remark-parse",
        "!remark-rehype",
        "!remark-slug",
        "!rehype-stringify",
        "!/^@hono//",
        "!/^@tailwindcss//",
        "!/^@vitest//",
        "!/^prettier-plugin-/",
        "!/^remark/",
        "!/^rehype/",
        "!/^@fec/remark/",
      ],
    },
    {
      groupName: "Minor updates",
      matchUpdateTypes: ["minor"],
      minimumReleaseAge: "7 days",
      matchPackageNames: [
        "!hono",
        "!honox",
        "!tailwindcss",
        "!vitest",
        "!prettier",
        "!remark",
        "!remark-autolink-headings",
        "!remark-emoji",
        "!remark-extract-frontmatter",
        "!remark-frontmatter",
        "!remark-gfm",
        "!remark-parse",
        "!remark-rehype",
        "!remark-slug",
        "!rehype-stringify",
        "!/^@hono//",
        "!/^@tailwindcss//",
        "!/^@vitest//",
        "!/^prettier-plugin-/",
        "!/^remark/",
        "!/^rehype/",
        "!/^@fec/remark/",
      ],
    },
    {
      matchUpdateTypes: ["major"],
      minimumReleaseAge: "14 days",
    },
    {
      matchUpdateTypes: ["minor", "patch"],
      minimumReleaseAge: "7 days",
    },
  ],
}

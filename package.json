{
  "private": true,
  "name": "blog.wadackel.me",
  "packageManager": "pnpm@7.13.1",
  "scripts": {
    "start": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "lint": "eslint . --ext \".js,.jsx,.ts,.tsx\"",
    "format": "pnpm format:lint && pnpm format:prettier",
    "format:lint": "pnpm lint --fix",
    "format:prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml}\"",
    "typecheck": "tsc",
    "scaffold": "scaffdog generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dayjs": "^1.8.33",
    "preact": "^10.4.7",
    "preact-render-to-string": "^5.1.10",
    "prismjs": "^1.21.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-schemaorg": "1.2.0",
    "schema-dts": "0.6.0",
    "typeface-caveat": "^0.0.76"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/node": "^16.11.41",
    "@types/react": "16.14.28",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/vfile-message": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "@weknow/gatsby-remark-twitter": "^0.2.3",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "gatsby": "^2.24.36",
    "gatsby-awesome-pagination": "^0.3.6",
    "gatsby-cli": "^2.12.78",
    "gatsby-plugin-feed": "^2.5.11",
    "gatsby-plugin-google-analytics": "^2.3.13",
    "gatsby-plugin-manifest": "^2.4.23",
    "gatsby-plugin-minify-classnames": "^0.2.0",
    "gatsby-plugin-postcss": "^2.3.11",
    "gatsby-plugin-preact": "^4.0.9",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-remove-generator": "^1.0.5",
    "gatsby-plugin-sitemap": "^2.4.11",
    "gatsby-plugin-typescript": "^2.4.17",
    "gatsby-remark-a11y-emoji": "^1.1.0",
    "gatsby-remark-autolink-headers": "^2.3.11",
    "gatsby-remark-copy-images": "^0.2.1",
    "gatsby-remark-emoji": "^0.0.3",
    "gatsby-remark-prismjs": "^3.5.10",
    "gatsby-source-filesystem": "^2.3.24",
    "gatsby-transformer-remark": "^2.8.28",
    "hast-util-to-html": "^7.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "parse-numeric-range": "^1.2.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.0.5",
    "prettier-plugin-packagejson": "^2.3.0",
    "prettier-plugin-scaffdog": "2.4.0",
    "remark-rehype": "^7.0.0",
    "scaffdog": "2.4.0",
    "typescript": "^3.9.7",
    "unified": "^9.1.0",
    "unist-util-visit": "^2.0.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "16.14.28",
      "unified": "9.0.0",
      "sharp": "^0.29.1"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "import",
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "rules": {
      "react/prop-types": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "import/default": "off",
      "import/no-named-as-default": "off",
      "import/no-named-as-default-member": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "prettier/@typescript-eslint",
          "plugin:import/typescript"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/no-empty-interface": "off",
          "@typescript-eslint/no-non-null-assertion": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/ban-types": "off",
          "@typescript-eslint/ban-ts-comment": "off",
          "import/order": [
            "error",
            {
              "newlines-between": "never"
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-scaffdog"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,cjs,ts,tsx,css,md,yml,json}": [
      "prettier --write"
    ]
  }
}

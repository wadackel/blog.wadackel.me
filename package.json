{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "astro build",
    "dev": "astro dev --host",
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml}\"",
    "format:lint": "npm run lint -- --fix",
    "lint": "eslint . --ext \".js,.jsx,.ts,.tsx\"",
    "prepare": "husky install",
    "preview": "astro preview --host",
    "scaffold": "scaffdog generate",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,ts,tsx,css,md,yml,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-astro",
      "prettier-plugin-scaffdog"
    ],
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "import",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "import/default": "off",
      "import/no-named-as-default": "off",
      "import/no-named-as-default-member": "off",
      "import/no-unresolved": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:import/typescript"
        ],
        "rules": {
          "@typescript-eslint/ban-ts-comment": "off",
          "@typescript-eslint/ban-types": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/no-empty-interface": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/no-non-null-assertion": "off",
          "@typescript-eslint/no-unused-vars": "off",
          "import/order": [
            "error",
            {
              "newlines-between": "never"
            }
          ]
        }
      }
    ]
  },
  "dependencies": {
    "@astrojs/cloudflare": "^7.0.1",
    "@astrojs/partytown": "^2.0.0",
    "@astrojs/preact": "^3.0.0",
    "preact": "^10.17.1"
  },
  "devDependencies": {
    "@astrojs/mdx": "^1.0.0",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@cloudflare/workers-types": "^4.20230821.0",
    "@fec/remark-a11y-emoji": "^3.1.0",
    "@fontsource/caveat": "^5.0.8",
    "@resvg/resvg-js": "^2.4.1",
    "@types/node": "^18.11.4",
    "@types/react": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "astro": "^3.0.7",
    "astro-compress": "^2.0.15",
    "autoprefixer": "^10.4.15",
    "dayjs": "^1.11.9",
    "eslint": "^8.48.0",
    "eslint-plugin-import": "^2.28.1",
    "front-matter": "^4.0.2",
    "globby": "^13.2.2",
    "graphemesplit": "^2.4.4",
    "hast-util-to-html": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "mdast-util-to-string": "^4.0.0",
    "mrmime": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "parse-numeric-range": "^1.3.0",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "prettier-plugin-packagejson": "^2.4.5",
    "prettier-plugin-scaffdog": "3.0.0",
    "prismjs": "^1.29.0",
    "quicklink": "^2.3.0",
    "remark-autolink-headings": "^7.0.1",
    "remark-emoji": "^4.0.0",
    "remark-gfm": "^3.0.1",
    "remark-rehype": "^10.1.0",
    "remark-slug": "^7.0.1",
    "satori": "^0.10.4",
    "scaffdog": "3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "unified": "^11.0.2",
    "unist-util-visit": "^5.0.0"
  },
  "packageManager": "pnpm@7.13.1"
}

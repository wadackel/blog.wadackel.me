{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "astro build",
    "dev": "astro dev",
    "format": "pnpm format:lint && pnpm format:prettier",
    "format:lint": "pnpm lint --fix",
    "format:prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml}\"",
    "lint": "eslint . --ext \".js,.jsx,.ts,.tsx\"",
    "prepare": "husky install",
    "preview": "wrangler pages dev ./dist",
    "scaffold": "scaffdog generate",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,ts,tsx,css,md,yml,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-astro",
      "prettier-plugin-scaffdog"
    ],
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "import",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "import/default": "off",
      "import/no-named-as-default": "off",
      "import/no-named-as-default-member": "off",
      "import/no-unresolved": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:import/typescript"
        ],
        "rules": {
          "@typescript-eslint/ban-ts-comment": "off",
          "@typescript-eslint/ban-types": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/no-empty-interface": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/no-non-null-assertion": "off",
          "@typescript-eslint/no-unused-vars": "off",
          "import/order": [
            "error",
            {
              "newlines-between": "never"
            }
          ]
        }
      }
    ]
  },
  "dependencies": {
    "@astrojs/cloudflare": "^3.1.0",
    "@astrojs/partytown": "^1.0.1",
    "@astrojs/preact": "^1.2.0",
    "preact": "^10.6.5"
  },
  "devDependencies": {
    "@astrojs/mdx": "^0.11.4",
    "@astrojs/rss": "^1.0.2",
    "@astrojs/sitemap": "^1.0.0",
    "@astrojs/tailwind": "^2.1.0",
    "@cloudflare/workers-types": "^3.18.0",
    "@fec/remark-a11y-emoji": "^3.1.0",
    "@fontsource/caveat": "^4.5.9",
    "@resvg/resvg-js": "^2.1.0",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/react": "^18.0.21",
    "@types/truncate-utf8-bytes": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "astro": "^1.5.0",
    "astro-compress": "^1.0.12",
    "autoprefixer": "^10.4.12",
    "dayjs": "^1.11.5",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.22.0",
    "globby": "^13.1.2",
    "graphemesplit": "^2.4.4",
    "hast-util-to-html": "^8.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mdast-util-to-string": "^3.1.0",
    "mrmime": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "parse-numeric-range": "^1.3.0",
    "postcss-import": "^15.0.0",
    "postcss-nesting": "^10.2.0",
    "prettier": "^2.0.5",
    "prettier-plugin-astro": "^0.5.5",
    "prettier-plugin-packagejson": "^2.3.0",
    "prettier-plugin-scaffdog": "2.4.0",
    "prismjs": "^1.29.0",
    "quicklink": "^2.3.0",
    "remark-autolink-headings": "^7.0.1",
    "remark-emoji": "^3.0.2",
    "remark-gfm": "^3.0.1",
    "remark-rehype": "^10.1.0",
    "remark-slug": "^7.0.1",
    "satori": "^0.0.43",
    "scaffdog": "2.4.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.8.4",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.1",
    "wrangler": "^2.1.13"
  },
  "packageManager": "pnpm@7.13.1"
}

{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build --mode client && vite build",
    "clean": "pnpm clean:dist && pnpm clean:screenshots",
    "clean:all": "pnpm clean:dist && pnpm clean:screenshots && pnpm clean:module",
    "clean:dist": "rm -rf dist",
    "clean:module": "rm -rf node_modules",
    "clean:screenshots": "rm -rf screenshots",
    "deploy": "wrangler deploy",
    "dev": "vite",
    "format": "pnpm format:lint && pnpm format:prettier",
    "format:lint": "pnpm lint --fix",
    "format:prettier": "prettier --write .",
    "lint": "oxlint",
    "prepare": "lefthook install",
    "preview": "wrangler dev --port 4321",
    "scaffold": "scaffdog generate",
    "test": "pnpm clean:screenshots && vitest run",
    "test:ui": "pnpm clean:screenshots && vitest --ui",
    "test:watch": "pnpm clean:screenshots && vitest",
    "typecheck": "tsc"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "hono": "^4.9.0",
    "honox": "^0.1.44"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@fec/remark-a11y-emoji": "^4.0.2",
    "@fontsource/caveat": "^5.0.16",
    "@hono/vite-build": "^1.7.0",
    "@hono/vite-dev-server": "^0.20.1",
    "@hono/vite-ssg": "^0.2.0",
    "@resvg/resvg-js": "^2.6.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.0.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.10",
    "@types/unist": "^3.0.3",
    "@vitest/browser": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "fast-glob": "^3.3.3",
    "front-matter": "^4.0.2",
    "graphemesplit": "^2.4.4",
    "happy-dom": "^18.0.1",
    "hast-util-to-html": "^9.0.0",
    "lefthook": "^1.12.3",
    "mdast-util-to-string": "^4.0.0",
    "oxlint": "^1.11.2",
    "parse-numeric-range": "^1.3.0",
    "playwright": "^1.54.2",
    "prettier": "^3.2.2",
    "prettier-plugin-packagejson": "^2.4.9",
    "prettier-plugin-scaffdog": "4.1.0",
    "prismjs": "^1.29.0",
    "rehype-stringify": "^9.0.4",
    "remark": "^14.0.3",
    "remark-autolink-headings": "^6.1.0",
    "remark-emoji": "^4.0.1",
    "remark-extract-frontmatter": "^3.2.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.2",
    "remark-rehype": "^10.1.0",
    "remark-slug": "^6.1.0",
    "satori": "^0.16.0",
    "scaffdog": "4.1.0",
    "tailwindcss": "^4.1.12",
    "to-vfile": "^8.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "unified": "^10.1.2",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3",
    "vfile-matter": "^5.0.1",
    "vite": "^7.1.1",
    "vitest": "^3.2.4",
    "wrangler": "^4.0.0",
    "yaml": "^2.8.1"
  },
  "packageManager": "pnpm@8.15.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  }
}
